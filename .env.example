# El Jarda Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
JWT_SECRET=generate-secure-64-char-hex-string-for-production
PORT=3001
NODE_ENV=production

# Database Configuration for Production (Koyeb)
# Replace with your actual Koyeb PostgreSQL details
DATABASE_HOST=your-koyeb-host.eu-central-1.pg.koyeb.app
DATABASE_USER=koyeb-adm
DATABASE_PASSWORD=your-database-password
DATABASE_NAME=koyebdb

# Database Configuration for Local Development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=el_jarda
DB_USER=postgres
DB_PASSWORD=password

# Development Mode (set to true to run without PostgreSQL locally)
# Remove this line or set to false for production deployment
MOCK_DB=true

# CORS Settings (Optional - for custom domain in production)
# ALLOWED_ORIGIN=https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp

# Email Configuration (Update for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@eljarda.com
EMAIL_TO=contact@eljarda.com
